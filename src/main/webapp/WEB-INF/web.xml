<?xml version="1.0" encoding="UTF-8"?>
<web-app id="clockinclockout-jaxws" version="3.1"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
						http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

	<display-name>clockinclockout-jaxws</display-name>
    
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/springframework/spring-application-context.xml
			/WEB-INF/springframework/spring-datasource.xml
			/WEB-INF/springframework/spring-java-mail.xml
			/WEB-INF/springframework/spring-velocity.xml
			/WEB-INF/springframework/spring-quartz.xml
		</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>file:/opt/etc/clockinclockout-jaxws/log4j.xml</param-value>
	</context-param>
	<context-param>
		<param-name>log4jExposeWebAppRoot</param-name>
		<param-value>false</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
   
	<session-config>
		<session-timeout>1</session-timeout>
		<cookie-config>
			<max-age>0</max-age>
		</cookie-config>
	</session-config>

</web-app>